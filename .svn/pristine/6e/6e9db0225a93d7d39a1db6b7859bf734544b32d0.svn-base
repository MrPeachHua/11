.commentTag {
    display: inline-block;
    height: 24px;
    border-radius: 24px;
    border: 1px solid #00D9B6;
    white-space: nowrap;
    padding-left: 10px;
    margin: 1px;
    overflow: hidden;
}
.commentTag span {
    display: inline-block;
    width: 18px;
    height: 18px;
    border-radius: 18px;
    border: 1px solid #00D9B6;
    margin: 2px 2px 2px 5px;
    vertical-align: middle;
    background-size: 14px 14px;
}
.commentTagUp {
    background: url("/share/images/up.png") no-repeat 2px 2px;
}
.commentTagDown {
    background: url("/share/images/down.png") no-repeat 2px 2px;
}